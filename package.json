{
  "name": "quantaroute-geocoder",
  "version": "1.0.0",
  "description": "MCP server and REST API for QuantaRoute Geocoding API - Geocode addresses, lookup locations, process DigiPin codes",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "quantaroute-geocoder": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run sync-client",
    "sync-client": "cp src/client.ts lib/client.ts",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "vercel-build": "echo 'No build needed - Vercel compiles TypeScript automatically'"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "geocoding",
    "digipin",
    "location-lookup",
    "quantaroute",
    "model-context-protocol",
    "rest-api",
    "vercel",
    "serverless"
  ],
  "author": {
    "name": "QuantaRoute",
    "email": "hello@quantaroute.com",
    "url": "https://quantaroute.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mapdevsaikat/quantaroute-geocoder.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@vercel/node": "^5.5.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "path-to-regexp": "^6.3.0",
    "esbuild": "^0.25.0",
    "undici": "^5.29.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
